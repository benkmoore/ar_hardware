<!-- Launch robot on hardware -->

<launch>
	<!-- Set paths to repos -->
    <param name="AR_COMMANDER_DIR" value="$(find ar_commander)" />

	<!-- Set sim environment -->
	<param name="ENV" value="hardware" />

	<!-- Launch autonomy stack -->
	<include file="$(find ar_commander)/launch/autonomy_stack.launch" />

    <!-- launch ROS serial connection -->
    <arg name="ros_serial_node" value="rosserial" />
    <param name="ros_serial_node" value="$(arg ros_serial_node)" />
    <node pkg="rosserial_python" type="serial_node.py" name="$(arg ros_serial_node)" args="_port:=/dev/ttyACM0 _baud:=57600" output="screen"/>

    <!-- Setup localization -->
    <node pkg="ar_commander" type="decawaveInterface.py" name="DecawaveInterface" output="screen" />

</launch>
